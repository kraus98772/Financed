<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WalletSettingsActivity"
    android:background="@color/raisin_black">

    <RelativeLayout
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="24dp">

        <ImageButton
            android:id="@+id/go_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_left_arrow" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="100dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/top_menu"
        android:id="@+id/remove_wallet_button">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/bin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_bin" />

            <TextView
                android:id="@+id/remove_wallet_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/bin"
                android:fontFamily="@font/rubik_family"
                android:text="@string/remove_wallet"
                android:textColor="@color/warning"
                android:textFontWeight="500"
                android:textSize="22dp" />

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/remove_wallet_popup"
        android:visibility="gone"
        android:background="@drawable/popup_background"
        android:padding="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/popup"
            android:padding="30dp">

            <TextView
                android:id="@+id/confirmation_warning_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_family"
                android:text="@string/do_you_really_want_to_remove_this_wallet"
                android:textColor="@color/alice_blue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/confirm_remove_wallet_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirmation_warning_text"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/yes_button"
                android:fontFamily="@font/rubik_family"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:text="Yes"
                android:textColor="@color/alice_blue"
                android:textFontWeight="600"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cancel_remove_wallet_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirmation_warning_text"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/rubik_family"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:text="No"
                android:textColor="@color/alice_blue"
                android:textSize="18sp" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>